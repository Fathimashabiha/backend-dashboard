{
  "compilerOptions": {
    // --- File Layout ---
    "rootDir": "./src",
    "outDir": "./dist",

    // --- Environment Settings ---
    "target": "es2020",
    "module": "commonjs", // Change 'nodenext' to 'commonjs' for better compatibility with TypeORM
    "lib": ["es2020", "dom"], // Add es2020 for async/await and other features
    "types": ["node", "reflect-metadata"], // Add 'reflect-metadata'
    
    // --- Decorator Settings (CRUCIAL for TypeORM) ---
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    
    // --- Other Outputs ---
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,

    // --- Stricter Typechecking Options ---
    // The 'strict' flag should be set to true, but we need to disable specific sub-flags
    "strict": true,
    "strictPropertyInitialization": false, // Set this to false to allow uninitialized properties with decorators
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,

    // --- Style Options ---
    "noImplicitReturns": true,
    "noImplicitOverride": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "noPropertyAccessFromIndexSignature": true,

    // --- Recommended Options ---
    "jsx": "react-jsx",
    "verbatimModuleSyntax":false,
    "isolatedModules": true,
    "noUncheckedSideEffectImports": true,
    "moduleDetection": "force",
    "skipLibCheck": true
  }
}